{% extends 'base.html.twig' %}

{% block title %}Hello CollectionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
            <h1> {{ itemCollection.name }} </h1>
            <h2> {{ itemCollection.description }} </h2>
            <h4> {{ itemCollection.dateAdd|date('Y-m-d') }} </h4>
            <img src="{{ asset('uploads/images/' ~ itemCollection.image.path) }}" width="100" height="100">
            <hr>
    </div>
{% endblock %}
