{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    {% for item in items %}
        <h1>{{ item.getName }}</h1>
        <h5>{{ item.getDateAdd|date("d/m/Y") }}</h5>
        {% for attributeString in item.getItemAttributeStringFields %}
            <h6>{{ attributeString.getCustomItemAttribute.getName}} : {{ attributeString.getValue }}</h6>
        {% endfor %}
        {% for attributeInteger in item.getItemAttributeIntegerFields %}
            <h6>{{ attributeInteger.getCustomItemAttribute.getName}} : {{ attributeInteger.getValue }}</h6>
        {% endfor %}

    {% endfor %}

</div>
{% endblock %}
