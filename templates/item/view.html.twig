{% extends 'base.html.twig' %}

{% block title %}Hello CollectionController!{% endblock %}

{% block body %}
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"></script>
    <script src="{{ asset('js/like-helper.js') }}"></script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div class="head d-flex justify-content-between">
            <h2 class="display-2">{{ item.getName|capitalize }}</h2>
            <h6 class="mt-3">{{ item.getDateAdd|date("d.m.Y") }}</h6>
        </div>

        {% for attributeString in item.getItemAttributeStringFields %}
            <h6>{{ attributeString.getCustomItemAttribute.getName}} : {{ attributeString.getValue }}</h6>
        {% endfor %}
        {% for attributeInteger in item.getItemAttributeIntegerFields %}
            <h6>{{ attributeInteger.getCustomItemAttribute.getName}} : {{ attributeInteger.getValue }}</h6>
        {% endfor %}
        <hr>


        <div class="likes">
            {% block likes %}
                {{ include('item/like/index.html.twig') }}
            {% endblock %}
        </div>
        <div class="comments">
            {% block comments %}
                {{ include('item/comments/index.html.twig') }}
            {% endblock %}
        </div>



    </div>
{% endblock %}
