{% extends 'base.html.twig' %}

{% block title %}Hello CollectionController!{% endblock %}

{% block body %}
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"></script>
    <script src="{{ asset('js/like-helper.js') }}"></script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ item.getName }}</h1>
        <h5>{{ item.getDateAdd|date("d/m/Y") }}</h5>
        {% for attributeString in item.getItemAttributeStringFields %}
            <h6>{{ attributeString.getCustomItemAttribute.getName}} : {{ attributeString.getValue }}</h6>
        {% endfor %}
        {% for attributeInteger in item.getItemAttributeIntegerFields %}
            <h6>{{ attributeInteger.getCustomItemAttribute.getName}} : {{ attributeInteger.getValue }}</h6>
        {% endfor %}
        <hr>
        <h1>Comments:</h1>
        {% for comment in item.getComments %}
            <h6>{{ comment.getUser.getUsername}} : {{ comment.getText}}</h6>
        {% endfor %}

        <div><button class="like">Like</button>{{ likeCount }}</div>
        <div><button class="dislike">DisLike</button>{{ dislikeCount }}</div>

        {{ form_start(commentForm) }}
        {{ form_errors(commentForm) }}
            {{ form_row(commentForm.text) }}
            {{ form_rest(commentForm) }}
            <button type="submit" formnovalidate>Send comment</button>
        {{ form_end(commentForm) }}
    </div>
{% endblock %}
