{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="my-2 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h1 mb-2 font-weight-normal">Please sign in</h1>
        <label class="pb-2" for="username">Username</label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="username" required autofocus>
        <label  class="pb-2" for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password mb-3" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-primary mt-4" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
